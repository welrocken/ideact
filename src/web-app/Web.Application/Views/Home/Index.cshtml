@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Ideact.Web.Application.View;
@using NCommons.Asp.Net.Extensions;

<script>
    function deleteItem(p) {
        $("#" + p).remove();
    }
</script>

<div class="right_col" role="main" style="min-height: 957px;">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Plain Page</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="x_content">

            @{
                var deletePromptModal = Modals.DeletePromptDialog("deleteItem");
            }

            @Html.Partial(
           new Properties
           {
               ModalId = deletePromptModal.Id,
               Title = "Features",
               Items = new List<Property>
               {
                   new Property("Blah"),
                   new Property("Blah2")
               }
           })

            @Html.Partial(deletePromptModal)

        </div>
    </div>
</div>