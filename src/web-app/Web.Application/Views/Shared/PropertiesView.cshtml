@model Properties

@using Ideact.Web.Application.View;
@using NCommons.Asp.Net.Extensions;

<div id="@Model.Id" class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>@Model.Title</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a data-toggle="modal" data-target="#@(Model.ModalId)" 
                       onclick="document.getElementById('@(Model.ModalId)').setAttribute('data-context', '@Model.Id');"><i class="fa fa-close"></i></a> <!-- TODO: Another way -->
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <div class="">
                @if (Model.Items != null && Model.Items.Count > 0)
                {
                    <ul>
                        @foreach (var property in Model.Items)
                        {
                            @Html.Partial(property)
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>